---
const brands = [
  "NIKE", "SPOTIFY", "UBER", "NOTION", "AIRBNB", "STRIPE"
];
---

<section class="py-12 border-y border-primary/5 bg-white overflow-hidden">
  <div class="relative w-full mask-linear-fade">
    <div class="flex whitespace-nowrap animate-scroll w-[200%]">
      <div class="flex items-center gap-24 md:gap-40 px-12 w-1/2 justify-around opacity-30 grayscale">
        {brands.map(brand => (
          <span class="text-sm font-bold tracking-[0.1em]">{brand}</span>
        ))}
      </div>
      <div class="flex items-center gap-24 md:gap-40 px-12 w-1/2 justify-around opacity-30 grayscale">
        {brands.map(brand => (
          <span class="text-sm font-bold tracking-[0.1em]">{brand}</span>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .mask-linear-fade {
    mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
  }
</style>
