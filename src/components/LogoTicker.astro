---
import { Image } from 'astro:assets';
import nikeLogo from '../assets/logos/nike.svg';
import spotifyLogo from '../assets/logos/spotify.svg';
import uberLogo from '../assets/logos/uber.svg';
import notionLogo from '../assets/logos/notion.svg';
import airbnbLogo from '../assets/logos/airbnb.svg';
import stripeLogo from '../assets/logos/stripe.svg';

const brands = [
  { name: "Nike", logo: nikeLogo },
  { name: "Spotify", logo: spotifyLogo },
  { name: "Uber", logo: uberLogo },
  { name: "Notion", logo: notionLogo },
  { name: "Airbnb", logo: airbnbLogo },
  { name: "Stripe", logo: stripeLogo }
];
---

<section class="py-12 border-y border-primary/5 bg-white overflow-hidden">
  <div class="relative w-full mask-linear-fade">
    <div class="flex whitespace-nowrap animate-scroll w-[200%]">
      <div class="flex items-center gap-24 md:gap-40 px-12 w-1/2 justify-around opacity-30 grayscale">
        {brands.map(brand => (
          <Image 
            src={brand.logo} 
            alt={`${brand.name} logo`} 
            class="h-8 w-auto object-contain"
            width={100}
            height={32}
          />
        ))}
      </div>
      <div class="flex items-center gap-24 md:gap-40 px-12 w-1/2 justify-around opacity-30 grayscale">
        {brands.map(brand => (
          <Image 
            src={brand.logo} 
            alt={`${brand.name} logo`} 
            class="h-8 w-auto object-contain"
            width={100}
            height={32}
          />
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .mask-linear-fade {
    mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
  }
</style>
