---

<section class="py-32 bg-black text-white" id="work">
  <div class="max-w-[1440px] mx-auto px-6 md:px-12">
    <div class="flex flex-col md:flex-row justify-between items-center md:items-end mb-16 reveal">
      <div class="space-y-2 text-center md:text-left">
        <h2 class="text-3xl md:text-5xl font-semibold tracking-tight">Casos de Éxito</h2>
        <p class="text-white/40 text-lg">Resultados reales para visionarios.</p>
      </div>
      
      <!-- Navigation Buttons -->
      <div class="hidden md:flex gap-4">
        <button id="prev-btn" class="w-12 h-12 rounded-full border border-white/20 flex items-center justify-center hover:bg-white/10 transition-colors disabled:opacity-30 disabled:cursor-not-allowed" aria-label="Previous slide">
          <span class="material-symbols-outlined">arrow_back</span>
        </button>
        <button id="next-btn" class="w-12 h-12 rounded-full border border-white/20 flex items-center justify-center hover:bg-white/10 transition-colors disabled:opacity-30 disabled:cursor-not-allowed" aria-label="Next slide">
          <span class="material-symbols-outlined">arrow_forward</span>
        </button>
      </div>
    </div>
    
    <div class="relative group/carousel">
      <div class="overflow-hidden cursor-grab active:cursor-grabbing" id="carousel-container">
        <div class="flex transition-transform duration-500 ease-out select-none" id="carousel-track">
          {projects.map(project => (
            <div class="w-full md:w-1/2 flex-shrink-0 px-6 pointer-events-none md:pointer-events-auto">
              {project.link ? (
                <a href={project.link} class="block group cursor-pointer pointer-events-auto">
                  <div class="relative aspect-[4/3] rounded-3xl overflow-hidden bg-gray-900 mb-6 border border-white/10">
                    <div class="w-full h-full transition-transform duration-700 group-hover:scale-105">
                      <Image 
                        src={project.image} 
                        alt={project.alt}
                        class="w-full h-full object-cover pointer-events-none"
                        width={800}
                        height={600}
                        decoding="async"
                      />
                      <div class="absolute inset-0 bg-black/20 group-hover:bg-black/0 transition-colors"></div>
                    </div>
                  </div>
                  <div class="flex justify-between items-start">
                    <div>
                      <h3 class="text-2xl font-bold mb-2 flex items-center gap-2">
                        {project.title}
                        <span class="material-symbols-outlined text-white/40 text-sm group-hover:text-white group-hover:translate-x-1 transition-all">arrow_outward</span>
                      </h3>
                      <p class="text-sm text-white/50 leading-relaxed max-w-sm">{project.description}</p>
                    </div>
                    <span class="text-xs font-semibold border border-white/20 px-3 py-1 rounded-full text-white/60">{project.year}</span>
                  </div>
                </a>
              ) : (
                <div class="group cursor-pointer pointer-events-auto">
                  <div class="relative aspect-[4/3] rounded-3xl overflow-hidden bg-gray-900 mb-6 border border-white/10">
                    <div class="w-full h-full transition-transform duration-700 group-hover:scale-105">
                      <Image 
                        src={project.image} 
                        alt={project.alt}
                        class="w-full h-full object-cover pointer-events-none"
                        width={800}
                        height={600}
                        decoding="async"
                      />
                      <div class="absolute inset-0 bg-black/20 group-hover:bg-black/0 transition-colors"></div>
                    </div>
                  </div>
                  <div class="flex justify-between items-start">
                    <div>
                      <h3 class="text-2xl font-bold mb-2">{project.title}</h3>
                      <p class="text-sm text-white/50 leading-relaxed max-w-sm">{project.description}</p>
                    </div>
                    <span class="text-xs font-semibold border border-white/20 px-3 py-1 rounded-full text-white/60">{project.year}</span>
                  </div>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    </div>
    <div class="mt-8 flex justify-center gap-4 md:hidden">
       <button id="prev-btn-mobile" class="w-12 h-12 rounded-full border border-white/20 flex items-center justify-center hover:bg-white/10 transition-colors disabled:opacity-30 disabled:cursor-not-allowed" aria-label="Previous slide">
          <span class="material-symbols-outlined">arrow_back</span>
        </button>
        <button id="next-btn-mobile" class="w-12 h-12 rounded-full border border-white/20 flex items-center justify-center hover:bg-white/10 transition-colors disabled:opacity-30 disabled:cursor-not-allowed" aria-label="Next slide">
          <span class="material-symbols-outlined">arrow_forward</span>
        </button>
    </div>
  </div>
</section>

<script>
  function setupCarousel() {
    const container = document.getElementById('carousel-container');
    const track = document.getElementById('carousel-track');
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');
    const prevBtnMobile = document.getElementById('prev-btn-mobile');
    const nextBtnMobile = document.getElementById('next-btn-mobile');
    
    if (!track || !container) return;
    const items = track.children;
    const totalSlides = items.length;

    let currentIndex = 0;
    let startX = 0;
    let currentTranslate = 0;
    let prevTranslate = 0;
    let isDragging = false;
    let animationID;
    
    const getVisibleSlides = () => window.innerWidth >= 768 ? 2 : 1;
    
    const getMaxIndex = () => {
      const visible = getVisibleSlides();
      return totalSlides - visible; 
    };

    const updateCarousel = (index) => {
      const visible = getVisibleSlides();
      const maxIndex = getMaxIndex();
      
      let targetIndex = index;
      if (targetIndex < 0) targetIndex = 0;
      if (targetIndex > maxIndex) targetIndex = maxIndex;
      
      currentIndex = targetIndex;
      
      const percentage = (100 / visible) * currentIndex;
      currentTranslate = -percentage;
      prevTranslate = currentTranslate;
      
      track.style.transform = `translateX(${percentage * -1}%)`;
      
      // Update buttons state
      const updateButtons = (prev, next) => {
        if (prev) prev.disabled = currentIndex === 0;
        if (next) next.disabled = currentIndex === maxIndex;
      };

      updateButtons(prevBtn, nextBtn);
      updateButtons(prevBtnMobile, nextBtnMobile);
    };

    const handlePrev = () => {
      updateCarousel(currentIndex - 1);
    };

    const handleNext = () => {
      updateCarousel(currentIndex + 1);
    };

    // Touch State
    let startY = 0;

    // Drag Events
    const touchStart = (index) => {
      return function(event) {
        isDragging = true;
        startX = getPositionX(event);
        startY = getPositionY(event); // Capture start Y
        animationID = requestAnimationFrame(animation);
        container.classList.add('grabbing');
        track.style.transition = 'none'; // Disable transition during drag
      }
    }

    const touchEnd = () => {
      isDragging = false;
      cancelAnimationFrame(animationID);
      container.classList.remove('grabbing');
      track.style.transition = 'transform 0.5s ease-out'; // Re-enable transition

      const movedBy = currentTranslate - prevTranslate;
      
      const visible = getVisibleSlides();
      const slideWidthPercent = 100 / visible;
      const threshold = slideWidthPercent / 4;
      
      if (movedBy < -threshold) {
        updateCarousel(currentIndex + 1);
      } else if (movedBy > threshold) {
        updateCarousel(currentIndex - 1);
      } else {
        updateCarousel(currentIndex);
      }
    }

    const touchMove = (event) => {
      if (isDragging) {
        const currentPositionX = getPositionX(event);
        const currentPositionY = getPositionY(event);
        
        const diffX = currentPositionX - startX;
        const diffY = currentPositionY - startY;

        // If moving more vertically than horizontally, let the browser handle scrolling
        // and ignore the carousel drag
        if (Math.abs(diffY) > Math.abs(diffX)) {
           return; 
        }

        // Otherwise, it's a horizontal swipe, so prevent default scrolling
        if (event.cancelable) {
           event.preventDefault();
        }
        
        const containerWidth = container.offsetWidth;
        const diffPercent = (diffX / containerWidth) * 100;
        
        currentTranslate = prevTranslate + diffPercent;
      }
    }

    const getPositionX = (event) => {
      return event.type.includes('mouse') ? event.pageX : event.touches[0].clientX;
    }
    
    const getPositionY = (event) => {
      return event.type.includes('mouse') ? event.pageY : event.touches[0].clientY;
    }

    const animation = () => {
      if(isDragging) {
        track.style.transform = `translateX(${currentTranslate}%)`;
        requestAnimationFrame(animation);
      }
    }

    // Event Listeners
    container.addEventListener('mousedown', touchStart(currentIndex));
    // Passive: false is crucial for preventDefault to work
    container.addEventListener('touchstart', touchStart(currentIndex), {passive: false});

    container.addEventListener('mouseup', touchEnd);
    container.addEventListener('mouseleave', () => { if(isDragging) touchEnd() });
    container.addEventListener('touchend', touchEnd);

    container.addEventListener('mousemove', touchMove);
    // Passive: false is crucial for preventDefault to work
    container.addEventListener('touchmove', touchMove, {passive: false});

    // Button Listeners
    if (prevBtn) prevBtn.addEventListener('click', handlePrev);
    if (nextBtn) nextBtn.addEventListener('click', handleNext);
    if (prevBtnMobile) prevBtnMobile.addEventListener('click', handlePrev);
    if (nextBtnMobile) nextBtnMobile.addEventListener('click', handleNext);

    // Initial update
    updateCarousel(0);

    // Handle resize
    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        updateCarousel(currentIndex);
      }, 100);
    });
    
    // Prevent context menu on right click during drag
    window.oncontextmenu = function(event) {
      if (isDragging) {
        event.preventDefault();
        event.stopPropagation();
        return false;
      }
    };
  }

  // Run on load
  setupCarousel();
  
  // Run on view transitions if enabled
  document.addEventListener('astro:page-load', setupCarousel);
</script>
