<script>
  function setupCarousel() {
    const container = document.getElementById('carousel-container');
    const track = document.getElementById('carousel-track');
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');
    const prevBtnMobile = document.getElementById('prev-btn-mobile');
    const nextBtnMobile = document.getElementById('next-btn-mobile');

    if (!track || !container) return;
    const items = track.children;
    const totalSlides = items.length;

    let currentIndex = 0;
    let startX = 0;
    let currentTranslate = 0;
    let prevTranslate = 0;
    let isDragging = false;
    let hasMoved = false;
    let clickStartTime = 0;
    let animationID;
    
    const getVisibleSlides = () => window.innerWidth >= 768 ? 2 : 1;

    const getMaxIndex = () => {
      const visible = getVisibleSlides();
      return totalSlides - visible; 
    };

    const updateCarousel = (index) => {
      const visible = getVisibleSlides();
      const maxIndex = getMaxIndex();

      let targetIndex = index;
      if (targetIndex < 0) targetIndex = 0;
      if (targetIndex > maxIndex) targetIndex = maxIndex;

      currentIndex = targetIndex;
      
      const percentage = (100 / visible) * currentIndex;
      currentTranslate = -percentage;
      prevTranslate = currentTranslate;
      
      track.style.transform = `translateX(${percentage * -1}%)`;
      
      // Update buttons state
      const updateButtons = (prev, next) => {
        if (prev) prev.disabled = currentIndex === 0;
        if (next) next.disabled = currentIndex === maxIndex;
      };

      updateButtons(prevBtn, nextBtn);
      updateButtons(prevBtnMobile, nextBtnMobile);
    };

    const handlePrev = () => {
      updateCarousel(currentIndex - 1);
    };

    const handleNext = () => {
      updateCarousel(currentIndex + 1);
    };

    // Touch State
    let startY = 0;

    // Drag Events
    const touchStart = (index) => {
      return function(event) {
        isDragging = true;
        hasMoved = false;
        clickStartTime = Date.now();
        startX = getPositionX(event);
        startY = getPositionY(event);
        animationID = requestAnimationFrame(animation);
        container.classList.add('grabbing');
        track.style.transition = 'none';
      }
    }

    const touchEnd = () => {
      if (!isDragging) return;
      const clickDuration = Date.now() - clickStartTime;
      
      isDragging = false;
      cancelAnimationFrame(animationID);
      container.classList.remove('grabbing');
      track.style.transition = 'transform 0.5s ease-out';

      const movedBy = currentTranslate - prevTranslate;
      
      const visible = getVisibleSlides();
      const slideWidthPercent = 100 / visible;
      const threshold = slideWidthPercent / 4;
      
      if (movedBy < -threshold) {
        updateCarousel(currentIndex + 1);
      } else if (movedBy > threshold) {
        updateCarousel(currentIndex - 1);
      } else {
        updateCarousel(currentIndex);
      }
    }

    const touchMove = (event) => {
      if (isDragging) {
        const currentPositionX = getPositionX(event);
        const currentPositionY = getPositionY(event);
        
        const diffX = currentPositionX - startX;
        const diffY = currentPositionY - startY;

        // If moving more vertically than horizontally, let the browser handle scrolling
        if (Math.abs(diffY) > Math.abs(diffX)) {
           return;
        }

        // Mark as moved if there's significant horizontal movement
        if (Math.abs(diffX) > 5) {
          hasMoved = true;
        }

        // Prevent default scrolling for horizontal swipes
        if (event.cancelable) {
           event.preventDefault();
        }
        
        const containerWidth = container.offsetWidth;
        const diffPercent = (diffX / containerWidth) * 100;
        
        currentTranslate = prevTranslate + diffPercent;
      }
    }

    const getPositionX = (event) => {
      return event.type.includes('mouse') ? event.pageX : event.touches[0].clientX;
    }
    
    const getPositionY = (event) => {
      return event.type.includes('mouse') ? event.pageY : event.touches[0].clientY;
    }

    const animation = () => {
      if(isDragging) {
        track.style.transform = `translateX(${currentTranslate}%)`;
        requestAnimationFrame(animation);
      }
    }

    // Prevent clicks on links when dragging or long press
    const preventClickIfNotQuick = (e) => {
      const clickDuration = Date.now() - clickStartTime;
      const isQuickClick = clickDuration < 200 && !hasMoved;
      
      if (!isQuickClick) {
        e.preventDefault();
        e.stopPropagation();
        return false;
      }
    };

    // Add click prevention to all links in the carousel
    const links = container.querySelectorAll('a');
    links.forEach(link => {
      link.addEventListener('click', preventClickIfNotQuick, true);
      // Prevent default drag behavior on links
      link.addEventListener('dragstart', (e) => e.preventDefault());
    });

    // Event Listeners on container
    container.addEventListener('mousedown', touchStart(currentIndex));
    container.addEventListener('touchstart', touchStart(currentIndex), {passive: false});

    container.addEventListener('mouseup', touchEnd);
    container.addEventListener('mouseleave', () => { if(isDragging) touchEnd() });
    container.addEventListener('touchend', touchEnd);

    container.addEventListener('mousemove', touchMove);
    container.addEventListener('touchmove', touchMove, {passive: false});

    // Global listeners to ensure touchEnd is always called
    document.addEventListener('mouseup', () => { if(isDragging) touchEnd() });
    document.addEventListener('touchend', () => { if(isDragging) touchEnd() });

    // Button Listeners
    if (prevBtn) prevBtn.addEventListener('click', handlePrev);
    if (nextBtn) nextBtn.addEventListener('click', handleNext);
    if (prevBtnMobile) prevBtnMobile.addEventListener('click', handlePrev);
    if (nextBtnMobile) nextBtnMobile.addEventListener('click', handleNext);

    // Initial update
    updateCarousel(0);

    // Handle resize
    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        updateCarousel(currentIndex);
      }, 100);
    });

    // Prevent context menu on right click during drag
    window.oncontextmenu = function(event) {
      if (isDragging) {
        event.preventDefault();
        event.stopPropagation();
        return false;
      }
    };
  }

  // Run on load
  setupCarousel();

  // Run on view transitions if enabled
  document.addEventListener('astro:page-load', setupCarousel);
</script>