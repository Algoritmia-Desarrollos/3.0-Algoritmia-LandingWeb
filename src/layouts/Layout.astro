---
import { ClientRouter } from 'astro:transitions';
import '@fontsource-variable/inter';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Astro high performance starter" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<link rel="canonical" href="https://algoritmia.io/" />
		<meta name="robots" content="index, follow" />
		<meta name="author" content="Algoritmia" />
		
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="https://algoritmia.io/og-image.jpg" />
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:title" content={title} />

		<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
        
        <script src="https://unpkg.com/lenis@1.1.18/dist/lenis.min.js"></script>
        
		<ClientRouter />
	</head>
	<body class="antialiased text-gray-900 bg-white">
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
	}

	html {
		font-family: 'Inter Variable', sans-serif;
		background: #13151a;
		scroll-behavior: auto; /* IMPORTANTE: Lenis controla el scroll */
        width: 100%;
        overflow-x: hidden;
	}

    /* --- SISTEMA DE ANIMACIONES --- */
    
    /* Estado inicial: invisible y desplazado hacia abajo */
    .reveal {
        opacity: 0;
        transform: translateY(50px);
        transition: all 1s cubic-bezier(0.16, 1, 0.3, 1); /* Curva de animación premium */
        filter: blur(5px); /* Pequeño blur para efecto elegante */
    }

    /* Estado activo: visible y en su lugar */
    .reveal.active {
        opacity: 1;
        transform: translateY(0);
        filter: blur(0);
    }

    /* Clases para retrasar la animación (efecto escalera) */
    .delay-100 { transition-delay: 0.1s; }
    .delay-200 { transition-delay: 0.2s; }
    .delay-300 { transition-delay: 0.3s; }
</style>

<script>
    // Wrapper para asegurar que el código se ejecute
    const startApp = () => {
        // 1. Configuración de Lenis (Scroll Suave)
        try {
            // @ts-ignore
            if (typeof Lenis !== 'undefined') {
                // @ts-ignore
                const lenis = new Lenis({
                    duration: 0.8, // Reduced from 1.2 for snappier feel
                    easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)), // Efecto "Out Quart"
                    smoothWheel: true
                });

                // Hacerlo global para que el Header lo pueda usar
                // @ts-ignore
                window.lenis = lenis;

                function raf(time) {
                    lenis.raf(time);
                    requestAnimationFrame(raf);
                }
                requestAnimationFrame(raf);
            } else {
                console.warn('Lenis no está definido. Scroll suave desactivado.');
            }
        } catch (e) {
            console.error('Error inicializando Lenis:', e);
        }

        // 2. Configuración del Observer (Animaciones)
        // Separado en un bloque try-catch para asegurar que siempre corra
        try {
            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0 // Cambiado a 0 para asegurar que se active apenas entre
            };
            
            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('active');
                        observer.unobserve(entry.target); 
                    }
                });
            }, observerOptions);

            const revealElements = document.querySelectorAll('.reveal');
            revealElements.forEach(el => observer.observe(el));
            
        } catch (e) {
            console.error('Error en animaciones:', e);
            // Fallback de emergencia: mostrar todo si falla el observer
            document.querySelectorAll('.reveal').forEach(el => el.classList.add('active'));
        }
    };

    // Ejecutar en carga inicial y navegación
    document.addEventListener('astro:page-load', startApp);
    
    // Fallback por si astro:page-load no dispara (ej: primera carga sin View Transitions)
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', startApp);
    } else {
        startApp();
    }
</script>
